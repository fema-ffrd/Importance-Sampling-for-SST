{
	"name": "mbi-devcontainer",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/mamba-org/devcontainer-features/micromamba:1": {
			"envFile": "/tmp/env.yaml",
			"envName": "mbi-base",
			"autoActivate": true,
			"version": "1.5.6"
		}
	},
	"runArgs": [
		"--gpus",
		"all"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.pylint",
				"GitHub.copilot",
				"ms-python.black-formatter"
			],
			"settings": {
				"python.defaultInterpreterPath": "/opt/conda/envs/mbi-base/bin/python"
			}
		}
	},
	// start the dev container with the mbi-base environment activated
	// avoid dubious ownership of the workspace folder https://www.kenmuse.com/blog/avoiding-dubious-ownership-in-dev-containers/
	"postStartCommand": "micromamba shell init --shell=bash && echo 'micromamba activate mbi-base' >> ~/.bashrc && git config --global --add safe.directory ${containerWorkspaceFolder}"
}